<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorPrimaryLight"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_item_book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/book1" />

    <TextView
        android:id="@+id/id_item_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_item_book_image"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/id_item_book_image"
        android:text="first"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_item_book_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_item_book_name"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/id_item_book_image"
        android:text="first"
        android:textColor="@color/colorTextPrimarySecondary"
        android:textSize="14sp" />

</RelativeLayout>